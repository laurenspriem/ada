{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "Fintet - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/api/items",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/items",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "https://ourdockerfile",
            "http://marketplace_app:8080"
          ]
        }
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 3,
          "client_max_rate": 0,
          "strategy": "ip"
        }
      }
    },
    {
      "endpoint": "/api/items/{item_id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/items/{item_id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://marketplace_app:8080"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
